@model User

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Bookstore App</h2>

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <table>
                <tr class="row pt-4">
                    <td class="col-4">@Html.LabelFor(u=> u.Name)</td>
                    <td class="col-4">@Html.TextBoxFor(u => u.Name)</td>
                </tr>
                <tr class="row pt-4">
                    <td class="col-4">@Html.LabelFor(u=> u.Password)</td>
                    <td class="col-4">@Html.PasswordFor(u => u.Password)</td>
                </tr>
                <tr class="row pt-4">
                    <td class="col-4"></td>
                    <td class="col-4"><input type="submit" value="Login" /></td>
                </tr>
            </table>
        }
    </div>
</div>